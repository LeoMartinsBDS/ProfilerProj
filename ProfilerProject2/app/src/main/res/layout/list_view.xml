<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:id="@+id/list_item_text"
        android:layout_alignTop="@+id/imageView37"
        android:layout_alignBottom="@+id/imageView37"
        android:layout_alignStart="@+id/list_item_btn_dislike"
        android:layout_alignEnd="@+id/list_item_btn_comentario" />



    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/list_item_btn"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/imageView37"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/list_item_btn_dislike"
        android:layout_alignBaseline="@+id/list_item_btn"
        android:layout_alignBottom="@+id/list_item_btn"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/list_item_btn_comentario"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_marginEnd="15dp"
        android:layout_alignBaseline="@+id/list_item_btn_dislike"
        android:layout_alignBottom="@+id/list_item_btn_dislike"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView37"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/photoprofiler"
        android:adjustViewBounds="true"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/list_item_btn"
        android:layout_marginEnd="11dp" />

</RelativeLayout>